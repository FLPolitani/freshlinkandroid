<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:background="#FFFFFF"
        android:scrollbars="none"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:layout_marginTop="-1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#bc000000"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="36dp"
                                android:layout_marginRight="36dp"
                                android:src="@drawable/freshlinkputih" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:textColor="#292929"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:text="Nama Lengkap"
                            android:layout_marginBottom="5dp"
                            geekui:customTypeface="fonts/varela_round.ttf"/>

                        <EditText
                            android:id="@+id/nama"
                            android:hint="Nama Lengkap"
                            android:inputType="text"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>

                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#3b3b3b"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:textColor="#292929"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:text="Alamat Email"
                            android:layout_marginBottom="5dp"
                            geekui:customTypeface="fonts/varela_round.ttf"/>

                        <AutoCompleteTextView
                            android:id="@+id/email"
                            android:inputType="textEmailAddress"
                            android:hint="Alamat Email"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#3b3b3b"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:textColor="#292929"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:text="Kata Sandi"
                            android:layout_marginBottom="5dp"
                            geekui:customTypeface="fonts/varela_round.ttf"/>

                        <EditText
                            android:id="@+id/password"
                            android:inputType="textPassword"
                            android:hint="Kata sandi"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#3b3b3b"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:textColor="#292929"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:text="Konfirmasi Kata Sandi"
                            android:layout_marginBottom="5dp"
                            geekui:customTypeface="fonts/varela_round.ttf"/>

                        <EditText
                            android:id="@+id/password_confirmation"
                            android:inputType="textPassword"
                            android:hint="Ulangi kata sandi"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#3b3b3b"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/email_sign_up_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Daftar"
                        android:textColor="#FFF"
                        android:background="@drawable/button_yellow_very_low"
                        android:textAllCaps="false"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:textColor="#434343"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="Login jika sudah punya akun"
                            geekui:customTypeface="fonts/varela_round.ttf"/>

                        <Button
                            android:layout_marginLeft="-3dp"
                            android:id="@+id/login_Btn"
                            android:textColor="#1a1a1a"
                            android:background="#00112233"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Login Disini"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
