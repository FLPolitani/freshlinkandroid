<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">

    <LinearLayout
        android:elevation="2dp"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:background="@drawable/border_background_yellow_low"
        android:layout_width="130dp"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border_background_grape_height"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:id="@+id/paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAKET A"
                android:textSize="12sp"
                android:textColor="#FFF"/>

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 50.000.000"
                android:textSize="12sp"
                android:textColor="#FFF"/>

        </LinearLayout>

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/paket_back"/>

    </LinearLayout>

</LinearLayout>