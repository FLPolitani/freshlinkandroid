<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sapi_limousin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sapi Limosin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/img_wight"/>

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.200 kg"
                            android:textColor="#1a1a1a"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_price"/>

                        <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 20.000.000"
                            android:textColor="#1a1a1a"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Detail"
                    android:layout_gravity="bottom|right"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>