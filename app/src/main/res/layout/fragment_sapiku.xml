<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="mobile.apps.bi.id.lagipanen.lagipanenapp.fragment.SapikuFragment">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_materi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:textColor="#FBBE03"
        app:pstsIndicatorColor="#FBBE03"
        app:pstsDividerColor="#FBBE03"
        android:layout_gravity="center"
        app:pstsTabTextAllCaps="true"
        app:pstsTabTextSize="13dp"
        app:pstsTabPaddingLeftRight="30dp"
        app:pstsUnderlineColor="@color/colorAccent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b7b7b7"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager_materi"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
