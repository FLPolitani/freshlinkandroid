<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobile.apps.bi.id.lagipanen.lagipanenapp.activity.MethodPayment"
    tools:showIn="@layout/activity_method_payment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="25dp"
            android:background="#FFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/img_pay"
                android:layout_width="200dp"
                android:scaleType="fitXY"
                android:layout_height="140dp" />

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#333333"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:elevation="3dp"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/border_background_white_low_with_stroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bayar di tempat"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="-5dp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank BRI"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="-5dp"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank BNI"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="-5dp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Lainya ..."
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="-5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/border_no_background_silver_low"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <EditText
                        android:background="#001a1a1a"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:textColor="#1a1a1a"
                        android:hint="Nama Bank"
                        android:layout_marginLeft="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Syarat &amp; Ketentuan"/>

            <mobile.apps.bi.id.lagipanen.lagipanenapp.utility.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="Penambahan 3 angka unik pada setiap transaksi pembayaran."/>

            <Button
                android:id="@+id/pay"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="lanjutkan"
                android:textColor="#FFF"
                android:background="@drawable/button_yellow_very_low"/>

        </LinearLayout>

        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
